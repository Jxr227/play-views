# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

GET     /library                                controllers.ApplicationController.index()
POST    /library                                controllers.ApplicationController.create()
GET     /library/:id                            controllers.ApplicationController.read(id: String)
PUT     /library/:id                            controllers.ApplicationController.update(id: String)
PUT     /library/:id                            controllers.ApplicationController.upsert(id: String)
DELETE  /library/:id                            controllers.ApplicationController.delete(id: String)
DELETE  /library/allBook                        controllers.ApplicationController.deleteAll
GET     /library/byBook                         controllers.ApplicationController.readByBook
GET     /library/google/book/:search/:term      controllers.ApplicationController.getGoogleBook(search: String, term: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
